{
  "name": "auto-stock",
  "version": "1.0.0",
  "description": "한국투자증권 자동매매 데스크톱 애플리케이션",
  "main": "main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:renderer\" \"wait-on http://localhost:5173 && electron .\"",
    "dev:renderer": "cd renderer && npm run dev",
    "build": "npm run build:renderer && electron-builder",
    "build:renderer": "cd renderer && npm run build",
    "dist": "npm run build:renderer && electron-builder --win --mac --linux",
    "dist:win": "npm run build:renderer && electron-builder --win",
    "dist:mac": "npm run build:renderer && electron-builder --mac",
    "dist:linux": "npm run build:renderer && electron-builder --linux"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.autostock.app",
    "productName": "AutoStock",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main/**/*",
      "renderer/dist/**/*"
    ],
    "extraResources": [
      {
        "from": "../dist-python/",
        "to": "python-backend",
        "filter": ["**/*"]
      },
      {
        "from": "../config/",
        "to": "config",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
